{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "brace-style": ["error", "allman"],
        "comma-spacing": ["error"],
        "camelcase": ["error"],
        "block-spacing": ["error"],
        "curly": ["warn"],
        "no-trailing-spaces": ["error"],
        "space-infix-ops": ["error"],
        "space-unary-ops": ["error"],
        "semi-spacing": ["error"],
		"max-len": ["error", { "code": 120 }]
    }
}
